CREATE DATABASE fashion_store;
USE fashion_store;
CREATE TABLE products (
  id INT PRIMARY KEY AUTO_INCREMENT,
  name VARCHAR(255),
  price DECIMAL(10, 2),
  quantity INT,
  sold INT DEFAULT 0
);
CREATE TABLE sales (
  id INT PRIMARY KEY AUTO_INCREMENT,
  product_id INT,
  sale_date DATE,
  quantity INT,
  total DECIMAL(10, 2),
  FOREIGN KEY (product_id) REFERENCES products(id)
);
INSERT INTO products (name, price, quantity) VALUES
('Product 1', 19.99, 100),
('Product 2', 29.99, 50);
